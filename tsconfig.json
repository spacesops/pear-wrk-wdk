{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./",
    "rootDir": "./",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.js",
    "src/**/*.js",
    "spec/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "bundle",
    "scripts",
    "shims",
    "types",
    "**/*.d.ts"
  ]
}


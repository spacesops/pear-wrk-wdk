{
  "name": "@spacesops/pear-wrk-wdk",
  "version": "1.0.0-beta.7",
  "main": "index.js",
  "scripts": {
    "build:types": "find . -name '*.d.ts' -not -path './node_modules/*' -not -path './types/*' -not -path './bundle/*' -delete && tsc",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "gen:macos-bundle": "npx bare-pack --target darwin-arm64 --linked --out bundle/wdk-worklet.bundle.js src/wdk-worklet.js",
    "create-ws-stubs": "node scripts/create-ws-stubs.js",
    "gen:worklet-bundle": "npm run create-ws-stubs && npx bare-pack --target ios-arm64 --target ios-arm64-simulator --target ios-x64-simulator --target android-arm --target android-arm64 --target android-ia32 --target android-x64 --linked --imports ./pack.imports.json --out bundle/worklet.bundle.mjs src/worklet.mjs",
    "gen:mobile-bundle": "npm run create-ws-stubs && npx bare-pack --target ios-arm64 --target ios-arm64-simulator --target ios-x64-simulator --target android-arm --target android-arm64 --target android-ia32 --target android-x64 --linked --imports ./pack.imports.json --out bundle/wdk-worklet.mobile.bundle.js src/wdk-worklet.js",
    "gen:schema": "node src/schema/schema.js",
    "postinstall": "npm run gen:mobile-bundle"
  },
  "dependencies": {
    "@wdk/wallet": "https://github.com/tetherto/wdk-wallet#integration-rn-starter",
    "@wdk/wallet-btc": "https://github.com/tetherto/wdk-wallet-btc#integration-rn-starter",
    "@wdk/wallet-evm": "https://github.com/tetherto/wdk-wallet-evm#integration-rn-starter",
    "@wdk/wallet-evm-erc-4337": "https://github.com/tetherto/wdk-wallet-evm-erc-4337#integration-rn-starter",
    "@wdk/wallet-solana": "https://github.com/tetherto/wdk-wallet-solana#integration-rn-starter",
    "@wdk/wallet-ton": "https://github.com/tetherto/wdk-wallet-ton#integration-rn-starter",
    "@wdk/wallet-ton-gasless": "https://github.com/tetherto/wdk-wallet-ton-gasless#integration-rn-starter",
    "@wdk/wallet-tron": "https://github.com/tetherto/wdk-wallet-tron#integration-rn-starter",
    "@wdk/wallet-tron-gasfree": "https://github.com/tetherto/wdk-wallet-tron-gasfree#integration-rn-starter",
    "bare-ipc": "1.1.1",
    "encoding": "npm:bare-encoding@1.0.0",
    "hrpc": "4.0.1",
    "hyperschema": "1.12.4",
    "os": "npm:bare-os@3.6.1"
  },
  "devDependencies": {
    "rimraf": "6.0.1",
    "standard": "17.1.2",
    "typescript": "5.8.3"
  },
  "author": "SpacesOps",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "standard": {
    "ignore": [
      "bundle/**",
      "node_modules/**",
      "types/**",
      "**/*.d.ts"
    ]
  }
}
